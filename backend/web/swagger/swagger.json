{
    "openapi": "3.0.0",
    "info": {
        "title": "IDW backend interview",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/v1",
            "description": "api for IDW backend interview"
        }
    ],
    "paths": {
        "/surveys": {
            "get": {
                "operationId": "IDW\\JOBINTERVIEW\\Server\\Controller\\SurveyController::index",
                "responses": {
                    "200": {
                        "description": "list of surveys",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "survey",
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Survey"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/surveys/{code}": {
            "get": {
                "operationId": "IDW\\JOBINTERVIEW\\Server\\Controller\\SurveyController::Get",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "description": "code of survey",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "a survey identified by code",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Survey"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Survey": {
                "description": "Survey",
                "properties": {
                    "name": {
                        "description": "survey's name",
                        "type": "string"
                    },
                    "code": {
                        "description": "ID",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "NotFound": {
                "description": "Resource not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "survey not found"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}