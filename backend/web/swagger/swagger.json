{
    "openapi": "3.0.0",
    "info": {
        "title": "IDW backend interview",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/v1",
            "description": "api for IDW backend interview"
        }
    ],
    "paths": {
        "/surveys": {
            "get": {
                "operationId": "IWD\\JOBINTERVIEW\\Server\\Controller\\SurveyController::listSurvey",
                "responses": {
                    "200": {
                        "description": "list of surveys",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "survey",
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Survey"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/surveys/{code}": {
            "get": {
                "operationId": "IWD\\JOBINTERVIEW\\Server\\Controller\\SurveyController::getSurvey",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "description": "code of survey",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "a list of surveys identified by code",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/SurveyInfo"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        },
        "/surveys/{code}/aggregate": {
            "get": {
                "operationId": "IWD\\JOBINTERVIEW\\Server\\Controller\\SurveyController::getAggregatedSurvey",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "description": "code of survey",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "survey with aggregate answers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SurveyAggregate"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Question": {
                "description": "question",
                "properties": {
                    "type": {
                        "$ref": "#/components/schemas/question_type"
                    },
                    "label": {
                        "description": "the question",
                        "type": "string"
                    },
                    "options": {
                        "description": "choices for qcm question",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "nullable": true
                    },
                    "answer": {
                        "description": "answer could be an array for qcm, an integer or a date",
                        "oneOf": [
                            {
                                "type": "string",
                                "format": "date-time"
                            },
                            {
                                "type": "integer"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "boolean"
                                }
                            }
                        ]
                    }
                },
                "type": "object"
            },
            "Survey": {
                "description": "Survey",
                "properties": {
                    "name": {
                        "description": "survey's name",
                        "type": "string"
                    },
                    "code": {
                        "description": "ID",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "SurveyAggregate": {
                "description": "Surveys with aggregated answers",
                "properties": {
                    "name": {
                        "description": "survey's name",
                        "type": "string"
                    },
                    "code": {
                        "description": "ID",
                        "type": "string"
                    },
                    "number": {
                        "description": "number of answers",
                        "type": "integer"
                    },
                    "aggregates": {
                        "description": "aggregated answer",
                        "type": "array",
                        "items": {}
                    }
                },
                "type": "object"
            },
            "SurveyInfo": {
                "description": "Survey complete information",
                "properties": {
                    "survey": {
                        "$ref": "#/components/schemas/Survey"
                    },
                    "questions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Question"
                        }
                    }
                },
                "type": "object"
            },
            "question_type": {
                "description": "possible types of question",
                "type": "string",
                "default": "qcm",
                "enum": [
                    "qcm",
                    "numeric",
                    "date"
                ]
            }
        },
        "responses": {
            "NotFound": {
                "description": "Resource not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "survey not found"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}